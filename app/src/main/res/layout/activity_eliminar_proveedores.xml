<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ipn.sofficcesware.com.mqst.proveedor.EliminarProveedoresActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar Proveedor"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/TittleSize"
        android:textStyle="bold"
        android:id="@+id/TituloEliminarProveedor"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TituloEliminarProveedor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:id="@+id/contenidoElProv">

            <TextView
                android:id="@+id/empresaEliminar"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="Empresa: Apple"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="@dimen/margDiv"/>

            <Button
                android:id="@+id/boton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/empresaEliminar"
                android:background="@color/Rojo"
                android:textColor="@color/BlancoHumo"
                android:text="BORRAR"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/empresaEliminar2"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="Empresa: MacQuick"
                android:layout_below="@+id/empresaEliminar"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="@dimen/margDiv"
                />

            <Button
                android:id="@+id/boton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/empresaEliminar2"
                android:background="@color/Rojo"
                android:textColor="@color/BlancoHumo"
                android:text="BORRAR"
                android:layout_below="@+id/boton1"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/empresaEliminar3"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="Empresa: Windows"
                android:layout_below="@+id/empresaEliminar2"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="@dimen/margDiv"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/empresaEliminar3"
                android:background="@color/Rojo"
                android:textColor="@color/BlancoHumo"
                android:text="BORRAR"
                android:layout_below="@+id/boton2"
                android:textSize="15sp"
                />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
