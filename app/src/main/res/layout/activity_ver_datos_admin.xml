<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ipn.sofficcesware.com.mqst.administrador.verDatosAdminActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/titVerPerfil"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/TittleSize"
        android:textStyle="bold"
        android:id="@+id/TituloPerfilAdmin"
        />

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/contenido"
        android:layout_below="@+id/TituloPerfilAdmin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/margDiv"
        android:layout_marginStart="@dimen/margDiv"
        android:layout_centerVertical="true"
        android:padding="@dimen/paddDiv">

        <RelativeLayout
            android:layout_height="fill_parent"
            android:layout_width="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txNombrePerfilCliente"
                android:text="@string/etiquetaName"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/margDiv"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txNombreContenidoCliente"
                android:text="@string/verNombreCompleto"
                android:textColor="@color/colorPrimaryDark"
                android:layout_toRightOf="@+id/txNombrePerfilCliente"
                android:layout_margin="@dimen/margDiv"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txUserPerfilCliente"
                android:text="@string/etiquetaUser"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/txNombrePerfilCliente"
                android:layout_margin="@dimen/margDiv"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txUserContenidoCliente"
                android:text="@string/verUser"
                android:textColor="@color/colorPrimaryDark"
                android:layout_toRightOf="@+id/txUserPerfilCliente"
                android:layout_below="@+id/txNombreContenidoCliente"
                android:layout_alignBaseline="@+id/txUserPerfilCliente"
                android:layout_margin="@dimen/margDiv"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txEmailPerfilCliente"
                android:text="@string/etiquetaEmail"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/txUserPerfilCliente"
                android:layout_margin="@dimen/margDiv"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txEmailContenidoCliente"
                android:text="@string/verEmail"
                android:textColor="@color/colorPrimaryDark"
                android:layout_toRightOf="@+id/txEmailPerfilCliente"
                android:layout_below="@+id/txUserContenidoCliente"
                android:layout_alignBaseline="@+id/txEmailPerfilCliente"
                android:layout_margin="@dimen/margDiv"
                />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
