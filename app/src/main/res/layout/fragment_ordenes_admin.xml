<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ipn.sofficcesware.com.mqst.administrador.OrdenesAdminFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ges_Ordenes"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/MiPerfilCliente"
                />

            <Button
                android:id="@+id/VerOrdenesAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/MiPerfilCliente"
                android:layout_marginTop="43dp"
                android:text="@string/verOrdenes"
                android:textSize="20sp"
                android:layout_margin="@dimen/margDiv"
                android:background="@color/colorPrimary"
                android:textColor="@color/BlancoHumo"/>

            <Button
                android:id="@+id/btn_AgregarOrden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agregarOrdenes"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/VerOrdenesAdmin"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/margDiv"
                android:background="@color/colorPrimary"
                android:textColor="@color/BlancoHumo"/>

            <Button
                android:id="@+id/ModificarOrden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="Modificar Órdenes"
                android:textSize="20sp"
                android:layout_below="@+id/btn_AgregarOrden"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/margDiv"
                android:background="@color/colorPrimary"
                android:textColor="@color/BlancoHumo"/>

            <Button
                android:id="@+id/EliminarOrden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="Eliminar Órdenes"
                android:textSize="20sp"
                android:layout_below="@+id/ModificarOrden"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/margDiv"
                android:background="@color/colorPrimary"
                android:textColor="@color/BlancoHumo"/>

            <Button
                android:id="@+id/OrdenesExtra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="Órdenes Extra"
                android:textSize="20sp"
                android:layout_below="@+id/EliminarOrden"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/margDiv"
                android:background="@color/colorPrimary"
                android:textColor="@color/BlancoHumo"/>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>
